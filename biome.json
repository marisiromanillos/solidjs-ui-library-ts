{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "root": true,
  "vcs": {
    "enabled": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "javascript": {
    "globals": ["Bun"],
    "formatter": {
      "semicolons": "always",
      "trailingCommas": "all",
      "quoteStyle": "double"
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "solid": "all"
    },
    "rules": {
      "recommended": true,
      "correctness": {
        "noNodejsModules": "off",
        "useHookAtTopLevel": "error"
      },
      "complexity": {
        "noExcessiveNestedTestSuites": "on",
        "useLiteralKeys": "off",
        "noForEach": "off"
      },
      "nursery": {
        "noDestructuredProps": "error"
      },
      "style": {
        "noDefaultExport": "off",
        "useDefaultSwitchClause": "off",
        "useConst": "error",
        "useTemplate": "error"
      },
      "suspicious": {
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["error", "warn", "info", "debug"]
          }
        },
        "noExplicitAny": "warn",
        "noArrayIndexKey": "error"
      },
      "a11y": {
        "useButtonType": "error",
        "useAltText": "error"
      },
      "performance": {
        "noAccumulatingSpread": "error",
        "noDelete": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error",
        "noDangerouslySetInnerHtmlWithChildren": "error"
      }
    }
  }
}
